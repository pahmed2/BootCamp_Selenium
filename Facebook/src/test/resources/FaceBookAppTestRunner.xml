<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="FacebookSuite" parallel="methods" thread-count="1">


    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnv" value="local"/>
    <parameter name="os" value="mac"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="resolution" value="1024x768"/>
    <parameter name="url" value="http://www.facebook.com/"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="50"/>
    <parameter name="testName" value="Facebook HomePage Test"/>

    <test name = "Facebook Home Page">
        <classes>
            <!--<class name="TestLandingPage.TestLogin"/>-->
            <!--<class name="TestHomepage.TestYourAccountMenu"/>-->
            <class name="TestHomepage.TestPostStatus"/>
        </classes>
    </test>

</suite>
